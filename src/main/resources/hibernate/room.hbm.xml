<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.codemaniac.hotelsystem">
    <class name="Room" table="rooms">
        <id name="roomNumber" type="string" column="room_number">
            <generator class="assigned" />
        </id>
        <many-to-one name="roomType" class="RoomType" cascade="save-update">
            <column name="room_type_room_type"/>
        </many-to-one>
        <property name="bedType" type="string" column="bed_type" />
        <property name="maxOccupancy" type="int" column="max_occupancy" />
        <property name="available" type="boolean" column="available" />
    </class>
</hibernate-mapping>