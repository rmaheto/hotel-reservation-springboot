<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.codemaniac.hotelsystem">
    <class name="RoomType" table="room_types">
        <id name="roomType" type="string" column="room_type" >
            <generator class="assigned" />
        </id>
        <one-to-one name="rate" class="Rate" cascade="save-update">
            <column name="rate_rate_id"/>
        </one-to-one>
        <property name="description" type="string" column="description" />
    </class>
</hibernate-mapping>